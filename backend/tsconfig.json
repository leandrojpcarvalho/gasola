{
  "extends": "@adonisjs/tsconfig/tsconfig.app.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./build",
    "paths": {
      "#controllers/*": [
        "./app/controllers/*"
      ],
      "#models/*": [
        "./app/models/*"
      ],
      "#services/*": [
        "./app/services/*"
      ],
      "#middleware/*": [
        "./app/middleware/*"
      ],
      "#validators/*": [
        "./app/validators/*"
      ],
      "#start/*": [
        "./start/*"
      ],
      "#config/*": [
        "./config/*"
      ],
      "#shared/*": [
        "../shared/dist/*"
      ]
    },
  },
  "references": [
    {
      "path": "../shared"
    }
  ],
}